<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Version>1.7.0</Version>
    <AssemblyVersion>1.7.0.0</AssemblyVersion>
    <FileVersion>1.7.0.0</FileVersion>
    <Product>MathQuizLocker</Product>
    <Company>DoneFeedingTheFox</Company>
    <ApplicationIcon>icon.ico</ApplicationIcon>
  </PropertyGroup>

  <!-- Copy all graphics from GFX\... into the build output (bin\...\Assets\...) -->
  <ItemGroup>
    <Content Include="Assets\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="MathQuizLocker.Tests\**" />
    <EmbeddedResource Remove="MathQuizLocker.Tests\**" />
    <None Remove="MathQuizLocker.Tests\**" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Assets\Dice\" />
    <Folder Include="Assets\Monsters\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Velopack" Version="0.0.1369-g1d5c984" />
  </ItemGroup>
  <ItemGroup>
    <None Include="icon.ico" Pack="true" />
  </ItemGroup>
  <ItemGroup>
    <None Update="monsters.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
